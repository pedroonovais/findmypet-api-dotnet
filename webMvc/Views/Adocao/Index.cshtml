@model List<AdocaoViewModel>

<h2>Lista de Adoções</h2>

<a asp-action="Create" class="btn btn-success mb-3">Nova Adoção</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id Adoção</th>
            <th>Id Pessoa</th>
            <th>Id Animal</th>
            <th>Data Adoção</th>
            <th>Tipo Adoção</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdAdocao</td>
                <td>@item.IdPessoa</td>
                <td>@item.IdAnimal</td>
                <td>@item.DataAdocao.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.TipoAdocao</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAdocao" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.IdAdocao" class="btn btn-danger btn-sm"
                       onclick="return confirm('Confirma exclusão?');">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
