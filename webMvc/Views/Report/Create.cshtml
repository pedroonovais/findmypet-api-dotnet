@model ReportViewModel

<h2>Novo Report</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdPessoa"></label>
        <input asp-for="IdPessoa" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdAnimal"></label>
        <input asp-for="IdAnimal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdLocal"></label>
        <input asp-for="IdLocal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IdSensor"></label>
        <input asp-for="IdSensor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataReport"></label>
        <input asp-for="DataReport" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DescricaoLocal"></label>
        <input asp-for="DescricaoLocal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StatusReport"></label>
        <input asp-for="StatusReport" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
