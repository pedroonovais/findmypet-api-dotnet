@model web_mvc.Models.AnimalDto
@{
    ViewData["Title"] = "Novo Animal";
}
<h1>@ViewData["Title"]</h1>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Especie" class="control-label"></label>
        <input asp-for="Especie" class="form-control" />
        <span asp-validation-for="Especie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataNascimento" class="control-label"></label>
        <input asp-for="DataNascimento" class="form-control" type="date" />
        <span asp-validation-for="DataNascimento" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}  